<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentVoteActivity">

    <Button
        android:id="@+id/vote_button_1"
        android:layout_width="107dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:backgroundTint="#B80000"
        android:onClick="onvoteButtonClicked"
        android:text="Vote"
        android:textColor="#FFD700"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toStartOf="@+id/imageView18"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadedImage2"
        app:layout_constraintVertical_bias="0.44"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/studentvote_redbar"
        tools:layout_editor_absoluteY="110dp" />

    <ImageView
        android:id="@+id/uploadedImage2"
        android:layout_width="121dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.287"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/btnUpload"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/vote_button_1"
        app:layout_constraintEnd_toEndOf="@+id/uploadedImage2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/uploadedImage2"
        app:layout_constraintTop_toTopOf="@+id/uploadedImage2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="236dp"
        android:layout_height="166dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:srcCompat="@drawable/gray_area" />

    <TextView
        android:id="@+id/candidate_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidate Name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintHorizontal_bias="0.050"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/candidate_description_1"
        android:layout_width="216dp"
        android:layout_height="94dp"
        android:textColor="@color/white"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce eget mauris sed est vehicula accumsan ac ut eros. Morbi ac velit nec velit consectetur elementum nec at sem. Etiam vehicula purus quis gravida dignissim."
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toBottomOf="@+id/candidate_position_1" />

    <TextView
        android:id="@+id/candidate_position_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/candidate_name_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/candidate_name_1"
        app:layout_constraintTop_toTopOf="@+id/candidate_name_1"
        app:layout_constraintVertical_bias="0.13" />


</androidx.constraintlayout.widget.ConstraintLayout>